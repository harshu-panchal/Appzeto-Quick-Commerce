    "ready",
    "approved",
    "rejected"
  ],
  
  "maxSentenceWords": 20,
  "maxLineLength": 100,
  
  "excludePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "*.test.js",
    "*.spec.js",
    "*.config.js"
  ]
}
