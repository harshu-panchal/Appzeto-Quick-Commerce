  "complexPhrases": [
    {
      "phrase": "in order to",
      "replacement": "to",
      "example": "Click here to save" 
    },
    {
      "phrase": "at this point in time",
      "replacement": "now",
      "example": "Save now"
    },
    {
      "phrase": "due to the fact that",
      "replacement": "because",
      "example": "Disabled because..."
    },
    {
      "phrase": "for the purpose of",
      "replacement": "to",
      "example": "Use this to track orders"
    },
    {
      "phrase": "in the event that",
      "replacement": "if",
      "example": "If you need help..."
    },
    {
      "phrase": "with regard to",
      "replacement": "about",
      "example": "Questions about orders"
    },
    {
      "phrase": "in relation to",
      "replacement": "about",
      "example": "Info about shipping"
    },
    {
      "phrase": "prior to",
      "replacement": "before",
      "example": "Check before saving"
    },
    {
      "phrase": "subsequent to",
      "replacement": "after",
      "example": "After payment..."
    },
    {
      "phrase": "in close proximity to",
      "replacement": "near",
      "example": "Stores near you"
    }
  ],
  
  "passiveVoiceIndicators": [
    "will be created",
    "will be added",
    "will be removed",
    "will be deleted",
    "will be updated",
    "has been created",
    "has been added",
    "has been removed",
    "was created",
    "was added",
    "is being processed"
  ],
  
  "approvedTerms": [
    "add",
